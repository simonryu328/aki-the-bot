{
  "description": "Test scenarios for follow-up scheduling decisions",
  "version": "1.0.0",

  "explicit_requests": {
    "description": "User explicitly asks for a reminder/check-in - MUST schedule",
    "priority": "highest",
    "scenarios": [
      {
        "id": "explicit_001",
        "user_message": "text me at 8:40am tomorrow",
        "should_schedule": true,
        "expected_time_hint": "8:40am tomorrow",
        "notes": "Direct time request"
      },
      {
        "id": "explicit_002",
        "user_message": "message me later tonight",
        "should_schedule": true,
        "expected_time_hint": "tonight",
        "notes": "Vague but explicit request"
      },
      {
        "id": "explicit_003",
        "user_message": "remind me at 3pm",
        "should_schedule": true,
        "expected_time_hint": "3pm today",
        "notes": "Same-day reminder"
      },
      {
        "id": "explicit_004",
        "user_message": "can you check in with me after my interview?",
        "should_schedule": true,
        "expected_time_hint": "after interview",
        "notes": "Event-relative request"
      },
      {
        "id": "explicit_005",
        "user_message": "text me tomorrow morning please",
        "should_schedule": true,
        "expected_time_hint": "tomorrow morning",
        "notes": "Polite request"
      },
      {
        "id": "explicit_006",
        "user_message": "hey can u message me in like 2 hours",
        "should_schedule": true,
        "expected_time_hint": "in 2 hours",
        "notes": "Casual language"
      }
    ]
  },

  "upcoming_events": {
