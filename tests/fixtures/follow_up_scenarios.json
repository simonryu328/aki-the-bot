  "waiting_for_resolution": {
    "description": "User is waiting for news/results - follow up to check if they heard back",
    "priority": "high",
    "scenarios": [
      {
        "id": "waiting_001",
        "user_message": "waiting to hear back from the company about the job",
        "should_schedule": true,
        "expected_topic": "job application",
        "expected_time_hint": "in a few days",
        "notes": "Job application follow-up"
      },
      {
        "id": "waiting_002",
        "user_message": "they said they'd call me today with the results",
        "should_schedule": true,
        "expected_topic": "results",
        "expected_time_hint": "tonight or tomorrow",
        "notes": "Same-day expected news"
      },
      {
        "id": "waiting_003",
        "user_message": "expecting my test results from the lab",
        "should_schedule": true,
        "expected_topic": "test results",
        "expected_time_hint": "in a few days",
        "notes": "Medical results"
      },
      {
        "id": "waiting_004",
        "user_message": "should find out about the apartment tomorrow",
        "should_schedule": true,
        "expected_topic": "apartment",
        "expected_time_hint": "tomorrow evening",
        "notes": "Housing decision"
      },
      {
        "id": "waiting_005",
        "user_message": "applied to 5 jobs this week, hoping to hear back soon",
        "should_schedule": true,
        "expected_topic": "job search",
        "expected_time_hint": "next week",
        "notes": "Bulk applications"
      }
    ]
  },

  "emotional_moments": {
