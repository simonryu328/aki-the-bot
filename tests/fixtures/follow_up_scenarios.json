  "edge_cases": {
    "description": "Ambiguous or tricky scenarios",
    "scenarios": [
      {
        "id": "edge_001",
        "user_message": "I might have an interview next week, not sure yet",
        "should_schedule": "maybe",
        "notes": "Uncertain future event - could schedule tentatively"
      },
      {
        "id": "edge_002",
        "user_message": "thinking about applying for a new job",
        "should_schedule": false,
        "notes": "Just thinking, no concrete action yet"
      },
      {
        "id": "edge_003",
        "user_message": "my interview was yesterday, it went well",
        "should_schedule": false,
        "notes": "Past event already resolved"
      },
      {
        "id": "edge_004",
        "user_message": "don't text me tomorrow, I'll be busy",
        "should_schedule": false,
        "notes": "User explicitly asked NOT to be contacted"
      },
      {
        "id": "edge_005",
        "user_message": "I have meetings every Monday",
        "should_schedule": false,
        "notes": "Recurring routine, not a one-time event"
      },
      {
        "id": "edge_006",
        "user_message": "remind me about... actually never mind",
        "should_schedule": false,
        "notes": "User changed their mind"
      }
    ]
  }
}
