      },
      {
        "id": "event_002",
        "user_message": "my date is tonight at 7",
        "should_schedule": true,
        "expected_topic": "date",
        "expected_time_hint": "tonight after 7pm or tomorrow",
        "notes": "Personal event"
      },
      {
        "id": "event_003",
        "user_message": "doctor's appointment on Friday at 10am",
        "should_schedule": true,
        "expected_topic": "doctor appointment",
        "expected_time_hint": "Friday afternoon",
        "notes": "Medical appointment"
      },
      {
        "id": "event_004",
        "user_message": "flying to NYC next Tuesday",
        "should_schedule": true,
        "expected_topic": "trip",
        "expected_time_hint": "Tuesday or Wednesday",
        "notes": "Travel plans"
      },
      {
        "id": "event_005",
        "user_message": "big presentation at work on Monday morning",
        "should_schedule": true,
        "expected_topic": "presentation",
        "expected_time_hint": "Monday afternoon",
        "notes": "Work event"
      },
      {
        "id": "event_006",
        "user_message": "meeting my ex tomorrow to get my stuff back",
